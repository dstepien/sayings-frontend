<div id="main-container" class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Add new saying</h1>
    </div>
    <div class="col-xs-12">&nbsp;</div>
    <div class="col-xs-12">
      <form action="" method="post">
        <div class="form-group">
          <label for="saying">Saying</label>
          <input type="text" name="saying" class="form-control" id="saying" maxlength="255" placeholder="Enter saying">
        </div>
        <div class="form-group">
          <label for="author">Author</label>
          <input type="text" name="author" class="form-control" id="author" maxlength="255" placeholder="Enter author">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>